{
  "name": "react-native-forge-ui",
  "version": "0.1.7",
  "description": "A CLI tool for creating React Native UI components with optional Tailwind CSS support",
  "type": "module",
  "main": "./dist/cli/index.js",
  "bin": {
    "react-native-forge-ui": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "cli",
    "src",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "if exist lib rmdir /s /q lib && if exist dist rmdir /s /q dist",
    "build": "tsc",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "tailwindcss",
    "nativewind",
    "cli"
  ],
  "author": "John Anthony Oling <anthonyoling333@gmail.com> (https://github.com/Anthony-333)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anthony-333/react-native-forge-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Anthony-333/react-native-forge-ui/issues"
  },
  "homepage": "https://github.com/Anthony-333/react-native-forge-ui#readme",
  "engines": {
    "node": ">=14"
  }
}
